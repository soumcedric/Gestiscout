    <script>
        function add_doc(activiteid){
                $("#inputfile").val('');
                GetListTypeDocument();
                $("#activiteid").val(activiteid);
                GetDocumentByActivite(activiteid);
                $("#modaldocument").modal({
                    backdrop:false
                });
            }

        function GetListTypeDocument(){
            $.ajax({
                type:"GET",
                url:"{{path("ListeTypeDocuments")}}",
                success:function(res){
                    debugger
                    $("#seltypedoc").empty();
                    $("#seltypedoc").append("<option selected>---sélectionner un type document---</option>");
                    var liste = JSON.parse(res.data);
                    $.each(liste,function(i,n){
                        $("#seltypedoc").append("<option value="+n.id+">"+n.Libelle+"</option>");
                    });
                },
                error:function(res){
                    debugger
                }
            });
        }

        function addDocument()
        {
            debugger
           
            var data = new FormData();
            let filename = $('input[type=file]')[0].files[0].name;
            data.append("activiteid",$("#activiteid").val());
            data.append("file",$('input[type=file]')[0].files[0],filename);
            data.append("typedoc",$("#seltypedoc").val());
            $.ajax({
                type:"POST",
                url:"{{path("addDocuments")}}",
                processData:false,
                contentType:false,
                data:data,
                success:function(res)
                {
                    if(res.ok)
                    {
                         swal({
                            type:"success",
                            title:"Ajout de documents",
                            message : res.message
                        },function()
                        {
                            GetDocumentByActivite($("#activiteid").val());
                        });
                    }
                    else
                    {
                          swal({
                            type:"error",
                            title:"Ajout de documents",
                            message : res.message
                        });
                    }
                },
                error:function(res)
                {
                     swal({
                        type:"error",
                        title:"Ajout de documents",
                        message : res.message
                    });
                }
            });
        }

