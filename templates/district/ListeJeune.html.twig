    <div class="container-fluid">

        <div class="row clearfix">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h2 class="text-center">Recherche des jeunes par critère</h2>
                    </div>
                    <div class="body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Groupe</label>
                                    <select id="groupe" class="form-control"></select>
                                </div>
                            </div>

                            <div class="col-md-6">

                                <div class="form-group">
