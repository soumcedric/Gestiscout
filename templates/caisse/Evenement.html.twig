{% extends 'base_caisse_new.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("assets/vendor/sweetalert/sweetalert.css") }}"/>
	<link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/fixedeader/dataTables.fixedcolumns.bootstrap4.min.css") }}">
	<link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/fixedeader/dataTables.fixedheader.bootstrap4.min.css") }}">
{% endblock %}
{# 
{% block title %}Hello CaisseController!{% endblock %} #}

{% block body %}
	<div class="container-fluid">
		<div class="page-wrapper">


			<div class="row clearfix">
				<div class="col-md-12 col-12 col-sm-12">
					<div class="card">
						<div class="header bg-primary">
							<h2 class="text-center text-white">Gestion des évènements</h2>
						</div>
						<div class="body">

							<div class="form-group row">

								<div class="col-sm-12 col-md-12 col-12 col-lg-12 text-right">
									<button class="btn btn-outline-primary" onclick="OpenModal();">
										<i class="fa fa-plus"></i>Opération</button>
								</div>
							</div>

							<br/><br/><br/>
							<div class="row col-12">
								<div class="col-10 text-center">
									<h5>
										<strong>Liste des évènements</strong>
									</h5>
								</div>


							</div>
							<div class="table-responsive">
								<table class="table" id="tbevenements">
									<thead class="thead-dark">
										<tr>
											<th class="">#</th>
											<th class="">Libelle</th>
											<th class="">Action</th>
										</tr>
									</thead>
									<tbody></tbody>
								</table>
							</div>
						</div>
					</div>
				</div>

			</div>
			<!-- Page-header start -->
			<div class="page-header card">
				<div class="card-block">
					<h5 class="m-b-10 text-center">Gestion des évènements</h3>

				</div>
			</div>
			<!-- Page-header end -->
			<div class="row text-right">
				<div class="col-sm-12">
					<button class="btn btn-primary btn-outline-primary" onclick="OpenModal();">
						<i class="icofont icofont-ui-add"></i>Evènement</button>
				</div>
			</div>

			<br/>

		</div>
	</div>
	<div id="styleSelector"></div>


	<!-- Modal -->
	<div class="modal fade" id="modaloperation" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLongTitle">Enregistrer un évènement</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form>


						<div class="form-group row">
							<label class="col-sm-2 col-form-label">Libelle</label>
							<div class="col-sm-10">
								<input type="text" class="form-control form-control-normal " id="txtlibelle" placeholder="libellé de l'évènement">
								<div class="col-form-label" id="messagedescription"></div>
							</div>

						</div>

					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
					<button type="" class="btn btn-primary" onclick="SaveEvent();">Enregistrer</button>
				</div>
			</div>
		</div>
	</div>


	<!-- Modal -->
	<div class="modal fade" id="modalproressbar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-sm modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title text-center" id="exampleModalLongTitle">Cloture évènement</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					

						<div class="progress row">
							<div class="progress-bar" role="progressbar" style="width: 10%;" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"><span id="percent">10%</span></div>
							{# <p>Préparation de la cloture</p> #}
						</div>
				
				</div>
				{# <div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
					<button type="" class="btn btn-primary" onclick="SaveEvent();">Enregistrer</button>
				</div> #}
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/vendor/jquery-datatable/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset("assets/vendor/sweetalert/sweetalert.min.js")}} "></script>
	<script src="{{ asset("js/pages/caisse/Events.js") }}"></script>
	<script src="{{ asset("assets/bundles/datatablescripts.bundle.js") }}"></script>
	<script src="{{ asset("assets/vendor/jquery-datatable/buttons/dataTables.buttons.min.js") }}"></script>


{% endblock %}
