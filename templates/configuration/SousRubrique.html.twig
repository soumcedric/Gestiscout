{% extends 'base_admin.html.twig' %}

{% block titre %}
	SOUS RUBRIQUE
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset("assets/vendor/sweetalert/sweetalert.css") }}"/>
	<link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/dataTables.bootstrap4.min.css") }}">
	<link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/fixedeader/dataTables.fixedcolumns.bootstrap4.min.css") }}">
	<link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/fixedeader/dataTables.fixedheader.bootstrap4.min.css") }}">
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="container-fluid">

		<div class="row clearfix">
			<div class="col-md-12">
				<div class="card">
					<div class="header">
						<h2 class="text-center">CONFIGURER DES SOUS RUBRIQUES</h2>
					</div>
					<div class="body">


						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label>Code</label>
									<input type="texte" class="form-control" required id="txtCode" placeholder="Code de la rubrique">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Libell√©</label>
									<input type="texte" class="form-control" required id="txtlibelle" placeholder="Libelle de la rubrique">
								</div>
							</div>
						</div>

                        	<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label>Rubrique</label>
									<select class="form-control" id="selrubrique"></select>
								</div>
							</div>
							
						</div>



						<div class="text-center">
							<button type="submit" class="btn btn-success" id="valider" onclick="SaveSousRubrique();">Valider</button>
							{# <button type="submit" class="btn btn-primary" id="modifier">Modifier</button> #}
							<button type="submit" class="btn btn-danger" id="btnannuler">Annuler</button>
						</div>


					</div>
				</div>
			</div>

		</div>

	</div>

	<div class="col-lg-12">
		<div class="card">
			<div class="header">
				<h2 class="text-center">Liste des formations</h2>
			</div>
			<div class="body">
				<div class="table-responsive">
					<table class="table" id="tbSousRubrique">
						<thead>
							<tr>
								<th>ID</th>
								<th>CODE</th>
								<th>LIBELLE</th>
								<th>RUBRIQUE</th>
								<th>ACTION</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('assets/vendor/jquery-datatable/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset("assets/vendor/sweetalert/sweetalert.min.js")}} "></script>
	<script src="{{ asset("js/pages/configuration.js")}} "></script>

{% endblock %}
