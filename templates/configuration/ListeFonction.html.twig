{% extends 'base.html.twig' %}

{% block titre %}ANNEE PASTORALE {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("assets/vendor/sweetalert/sweetalert.css") }}"/>
    <link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/dataTables.bootstrap4.min.css") }}">
    <link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/fixedeader/dataTables.fixedcolumns.bootstrap4.min.css") }}">
    <link rel="stylesheet" href="{{ asset("assets/vendor/jquery-datatable/fixedeader/dataTables.fixedheader.bootstrap4.min.css") }}">
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="container-fluid">
           
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h2 class="text-center">CONFIGURER LES FONCTIONS</h2>
                    </div>
                    <div class="body">
                        <div class="row">
                      <div class="col-md-6">
                            <div class="form-group">
                                <label>CODE FONCTION</label>
                                <input type="text" class="form-control" required id="code" placeholder="CD / CDA / ACD">
                            </div>
                      </div>

                        <div class="col-md-6">

                            <div class="form-group">
                                <label>LIBELLE FONCTION</label>
                                <input type="text" class="form-control" required id="libelle" placeholder="ex: commissaire de district">
                            </div>

                        </div>

                    </div>

                        <div class="text-center"> 
                            <button type="submit" class="btn btn-success" id="valider">Valider</button>
                            <button type="submit" class="btn btn-danger">Annuler</button>
                        </div>
                            
                        
                    </div>
                </div>
            </div>
          
        </div>
        
    </div>
    
<div class="col-lg-12">
    <div class="card">
        <div class="header">
            <h2>Liste des jeunes</h2>
        </div>
        <div class="body">
            <div class="table-responsive">
                <table class="table" id="tbFonction">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Code Fonction</th>
                            <th>Libelle Fonction</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                   <tbody>

                   </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('assets/vendor/jquery-datatable/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset("assets/vendor/sweetalert/sweetalert.min.js")}} "></script>
<script>
    $(document).ready(function(){
        debugger
      var table = $("#tbFonction").DataTable({
          language: {
              processing: "Traitement en cours...",
              search: "Rechercher&nbsp;:",
              lengthMenu: "Afficher _MENU_ &eacute;l&eacute;ments",
              info: "Affichage de l'&eacute;lement _START_ &agrave; _END_ sur _TOTAL_ &eacute;l&eacute;ments",
              infoEmpty: "Affichage de l'&eacute;lement 0 &agrave; 0 sur 0 &eacute;l&eacute;ments",
              infoFiltered: "(filtr&eacute; de _MAX_ &eacute;l&eacute;ments au total)",
              infoPostFix: "",
              loadingRecords: "Chargement en cours...",
              zeroRecords: "Aucun &eacute;l&eacute;ment &agrave; afficher",
              emptyTable: "Aucune donnée disponible dans le tableau",
              paginate: {
                  first: "Premier",
                  previous: "Pr&eacute;c&eacute;dent",
                  next: "Suivant",
                  last: "Dernier"
              }
          },
          columns: [
              { "data": "ID" },
              { "data": "CODE" },
              { "data": "LIBELLE" },
              { "data": "ACTION" }
          ],
          // columnDefs: [
          //     {
          //         targets: 0,
          //         visible: false
          //     }],
          data: [],
          rowCallback: function (row, data) { },
          filter: true,
          info: true,
          ordering: false,
          processing: false,
          retrieve: true
      });
        debugger
        loadData();

        function loadData(){
            $.ajax({
                type:"GET",
                url:"{{ path("GetListeFonction")}}",
                success:function(resp){
                    debugger
                    var liste = JSON.parse(resp);
                    $.each(liste,function(i,n){

                        debugger
                        //alert(n.Nom);
                        table.rows.add([{
                            "ID":n.id,
                            "CODE":n.Code,
                            "LIBELLE":n.Libelle ,
                            "ACTION" :"<button><span><i class='fa fa-trash'></i></span></button><button><span><i class='fa fa-pencil'></i></span></button><button><span><i class='fa fa-eye'></i></span></button>"

                        }]).draw();
                    });
                }
            });
        }


        $("#valider").click(function(){
            debugger
            var Fonction = {
                Code : $("#code").val(),
                Libelle : $("#libelle").val()
            };

            $.ajax({
                type: "POST",
                url:"{{ path("AddFonction") }}",
                dataType:"json",
                data:{"value" : Fonction},
                success:function(res){
debugger
                    if (res===1){
                        swal({
                            title:"FONCTION",
                            text:"Enregistrement effectué avec succès",
                            type:"success"

                        },function (){
                            debugger
                        });
                    }else {
                        swal({
                            type:"error",
                            title:"FONCTON",
                            text:"Problème pendant l'opération"
                        });
                    }

                },
                error:function(res){
                    debugger
                }

            });
        });

    });
</script>
{% endblock %}